<!--pages/find/book.wxml-->
<view class='geduanv'></view>

<view class='bookimgv'>
  <image src='{{backimg}}' class='bookimg'></image>
</view>


<view class='inputv'>
  <image src='/resources/find/name.png' class='nameico'></image>
  <view class='linev'></view>
  <input type='text' placeholder='请输入真实姓名' placeholder-class='tipcss' class='txtcss' value='{{name}}' bindinput='getname'></input>
</view>


<view class='inputv'>
  <image src='/resources/find/phone.png' class='phoneico'></image>
  <view class='linev'></view>
  <input type='number' placeholder='请输入手机号码' placeholder-class='tipcss' class='txtcss' value='{{phone}}' bindblur='getphone' bindconfirm='getphone' maxlength='11'></input>
</view>

<view class='bookbtn' bindtap='bookopt'>立即报名</view>
<view class='notecss'>报名前如有疑问，可一键咨询
  <text style='text-decoration:underline;' bindtap='makephone'>{{contactnum}}</text>
</view>