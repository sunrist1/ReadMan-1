/* pages/find/book.wxss */
page{
  background-color: #fff;
}

.geduanv {
  background-color: #e4edf7;
  width: 100%;
  height: 20rpx;
}

/*图片*/

.bookimgv {
  text-align: center;
  margin: 152rpx auto 118rpx auto;
  width: 100%;
}

.bookimg {
  width: 342rpx;
  height: 349rpx;
}

/*输入框*/

.inputv {
  width: 88%;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(170, 170, 170, 1);
  border-radius: 44rpx;
  display: flex;
  margin: 0 6% 38rpx 6%;
}

.nameico {
  width: 40rpx;
  height: 35rpx;
  margin: 26rpx 36rpx 27rpx 27rpx;
}

.phoneico {
  width: 44rpx;
  height: 38rpx;
  margin: 20rpx 36rpx 20rpx 27rpx;
}

.tipcss {
  color: #999;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.txtcss {
  color: #333;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  padding-left: 28rpx;
}

.linev {
  width: 2rpx;
  height: 36rpx;
  background: rgba(229, 229, 229, 1);
  margin: 26rpx 0;
}

/*报名按钮*/

.bookbtn {
  width: 88%;
  height: 88rpx;
  background: rgba(18, 188, 248, 1);
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin: 118rpx 6% 38rpx 6%;
}

.notecss{
  text-align: center;
  font-size: 24rpx;
  color: #333;
}