/*订单记录部分*/

.orderv {
  margin: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 25rpx;
  background-color: #fff;
}

.ordertopv {
  display: flex;
  justify-content: space-between;
  padding: 21rpx;
  font-size: 26rpx;
}

.orderstatusr {
  color: #f33;
}
.orderstatush {
  color: #999;
}
.orderstatusb {
  color: #09f;
}
.ordergoodsv {
  background: #f6f4f4;
}

.goodsv {
  display: flex;
  margin: 0 20rpx;
}

.goodstu {
  width: 170rpx;
  height: 170rpx;
  margin: 30rpx 10rpx;
}

.goodsinfov {
  margin-top: 36rpx;
