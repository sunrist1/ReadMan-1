}

.goodsname {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goodsattr {
  color: #999;
  font-size: 24rpx;
  margin: 16rpx 0;
}

.goodsnumv {
  margin-top: 17rpx;
  display: flex;
}

.goodsjifenv {
  font-size: 30rpx;
  color: #f33;
}

.buynumtxt {
  margin-left: 63rpx;
  color: #999;
