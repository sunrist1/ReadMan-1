/* pages/order/index.wxss */

page {
  background-color: #e4edf7;
}

.tabv {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 9px 0px 16px rgba(84, 179, 240, 0.17);
  background-color: #fff;
}

.tabitemhv {
  color: #06c;
  border-bottom: 5rpx solid #06c;
}

.tabitemv {
  color: #999;
}

/*订单记录部分*/

.orderv {
  margin: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 25rpx;
  background-color: #fff;
}

.ordertopv {
  display: flex;
  justify-content: space-between;
  padding: 21rpx;
  font-size: 26rpx;
}

.orderstatus {
  color: #f33;
}

.ordergoodsv {
  background: #f6f4f4;
}

.goodsv {
  display: flex;
  margin: 0 20rpx;
}

.goodstu {
  width: 170rpx;
  height: 170rpx;
  margin: 30rpx 10rpx;
}

.goodsinfov {
  margin-top: 36rpx;
  margin-left: 17rpx;
}

.goodsname {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goodsattr {
  color: #999;
  font-size: 24rpx;
  margin: 16rpx 0;
}

.goodsnumv {
  margin-top: 17rpx;
  display: flex;
}

.goodsjifenv {
  font-size: 30rpx;
  color: #f33;
}

.buynumtxt {
  margin-left: 63rpx;
  color: #999;
  font-size: 30rpx;
}

.pricev {
  text-align: right;
  margin-right: 30rpx;
  font-size: 26rpx;
  margin-top: 30rpx;
}

/*操作按钮部分*/

.orderoptv {
  border-top: 1rpx solid #e5e5e5;
  text-align: right;
  margin-top: 20rpx;
  padding-bottom: 90rpx;
}

.huibtn {
  width: 200rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 18rpx;
}

.huangbtn {
  width: 200rpx;
  height: 80rpx;
  background: #ffcc41;
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 0rpx;
}

.lanbtn {
  width: 200rpx;
  height: 80rpx;
  background: #12bcf8;
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 0rpx;
}

/*弹窗样式部分*/

.service_boxs {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 9999;
}

.mask {
  background-color: rgba(0, 0, 0, 0.4);
}

.show_qiaodao_jifen {
  width: 540rpx;
  height: 504rpx;
  position: absolute;
  top: 348rpx;
  left: 49%;
  transform: translateX(-50%);
  background-color: #fff;
  border-radius: 12rpx;
  text-align: center;
}

.show_qiaodao_jifen .tiger {
  width: 195rpx;
  height: 267rpx;
  display: inline-block;
  position: absolute;
  top: -142rpx;
  left: 45%;
  transform: translateX(-50%);
}

.show_qiaodao_jifen .tuoyuan_box {
  width: 100%;
  height: 180rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  top: 0;
  left: 0;
}

.show_qiaodao_jifen .tuoyuan_box::after {
  content: "";
  display: inline-block;
  width: 500px;
  height: 160px;
  background: #12bcf8;
  position: absolute;
  top: -162rpx;
  left: 50%;
  z-index: -1;
  transform: translateX(-50%);
  -moz-border-radius: 250px / 80px;
  -webkit-border-radius: 250px / 80px;
  border-radius: 250px / 80px;
}


/*顶部的行*/

.txtopv {
  border-bottom: 1rpx solid #eee;
  text-align: center;
  height:300rpx;
  padding: 10rpx 0;
}

.confirmimg {
  width: 195rpx;
  height: 267rpx;
}

.confirmtip {
  font-size: 36rpx;
  color: #12bcf8;
  text-align: center;
  margin: 200rpx auto 22rpx auto;
}

.confirmtxt {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/*按钮层*/

.btnv {
  text-align: center;
  display: flex;
  justify-content: center;
  margin: 33rpx auto 41rpx auto;
}

.cancelbtn {
  width: 220rpx;
  height: 88rpx;
  background: rgba(18, 188, 248, 1);
  border-radius: 44rpx;
  text-align: center;
