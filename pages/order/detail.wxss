/* pages/order/detail.wxss */

page {
  background-color: #e4edf7;
}

/*地址行*/

.addressv {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  display: flex;
}

.cheicon {
  width: 40rpx;
  height: 37rpx;
  margin: 56rpx 25rpx;
}

.addressinfov {
  width: 75%;
  height: 150rpx;
}

.userinfov {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.username {
  width: 70%;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.userphone {
  font-size: 30rpx;
  color: #333;
}

.useraddr {
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 16rpx;
}

.rightv {
  width: 13%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  color: #999;
}

/*订单记录部分*/

.orderv {
  margin: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 25rpx;
  background-color: #fff;
}

.ordertopv {
  display: flex;
  justify-content: space-between;
  padding: 21rpx;
  font-size: 26rpx;
}

.orderstatus {
  color: #f33;
}

.ordergoodsv {
  background: #f6f4f4;
}

.goodsv {
  display: flex;
  margin: 0 20rpx;
}

.goodstu {
  width: 170rpx;
  height: 170rpx;
  margin: 30rpx 10rpx;
}

.goodsinfov {
  margin-top: 36rpx;
  margin-left: 17rpx;
}

.goodsname {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goodsattr {
  color: #999;
  font-size: 24rpx;
  margin: 16rpx 0;
}

.goodsnumv {
  margin-top: 17rpx;
  display: flex;
}

.goodsjifenv {
  font-size: 30rpx;
  color: #f33;
}

.buynumtxt {
  margin-left: 63rpx;
  color: #999;
  font-size: 30rpx;
  width: 38%;
}

.pricev {
  text-align: right;
  margin-right: 30rpx;
  font-size: 26rpx;
  margin-top: 30rpx;
  font-weight: bold;
}

.sumpricev {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 20px 30rpx 20rpx;
  font-size: 30rpx;
  color: #999;
}

/*订单时间*/

.ordertimev {
  display: flex;
  margin: 20rpx 0;
  background: #fff;
  height: 230rpx;
}

.timev {
  width: 16%;
  text-align: center;
}

.timeicon {
  width: 44rpx;
  height: 44rpx;
  margin-top: 93rpx;
}

.timeoptv {
  padding: 20rpx 0;
}

.timeopttxt {
  font-size: 26rpx;
  color: #333;
  line-height: 48rpx;
}

/*物流信息*/

.wuliuv {
  background-color: #fff;
  margin-top: 20rpx;
}

/*物流公司*/

.wuliucompv {
  display: flex;
  margin: 18rpx 25rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.wuliucompiconv {
  width: 16%;
  text-align: center;
}

.wuliucompicon {
  width: 44rpx;
  height: 44rpx;
  margin-top: 58rpx;
}

.wuliucompinfov {
  margin: 18rpx 0;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #333;
}

.wuliutip {
  margin: 25rpx 26rpx;
  font-size: 28rpx;
  color: #333;
}

/*物流追踪部分*/

.wuliurecordv {
  padding-bottom: 84rpx;
}

.wuliurecorditemv {
  margin: 0rpx 18rpx;
  display: flex;
}

.wuliurecorditemvh {
  margin: 60rpx 18rpx 0 18rpx;
  display: flex;
}

.wlrleftv {
  width: 16%;
  text-align: center;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.wlrleftdoth {
  width: 30rpx;
  height: 30rpx;
  background: #12bcf8;
  border-radius: 15rpx;
}

.wlrleftdot {
  width: 30rpx;
  height: 30rpx;
  background: #e5e5e5;
  border-radius: 15rpx;
}

.wlrleftline {
  height: 110rpx;
  background: #e5e5e5;
  width: 2rpx;
  margin-left: -15rpx;
  margin-top: 30rpx;
}

.wlrrightv {
  overflow: hidden;
  text-overflow: ellipsis;
  word-spacing: normal;
  width: 70%;
  margin-top: -20rpx;
}

.wlrtxt {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.wlrtime {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/*申请退款*/

.refundbtn {
  border: 1rpx solid #c9c9c9;
  color: #999;
  font-size: 30rpx;
  padding: 15rpx 20rpx;
  border-radius: 12rpx;
  float: right;
  margin-top: -20rpx;
}

/*操作按钮部分*/

.btnoptv {
  background: #fff;
  padding: 20rpx 0;
  height: 100rpx;
  margin-top: 20rpx;
}


.huibtn {
  width: 200rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 18rpx;
}

.huangbtn {
  width: 200rpx;
  height: 80rpx;
  background: #ffcc41;
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 0rpx;
}

.lanbtn {
  width: 200rpx;
  height: 80rpx;
  background: #12bcf8;
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 0rpx;
}
/*弹窗样式部分*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 72%;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 14%;
  z-index: 100;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0px 6rpx 40rpx 0px rgba(0, 102, 153, 0.3);
}

/*顶部的行*/

.txtopv {
  border-bottom: 1rpx solid #eee;
  text-align: center;
  height:300rpx;
  padding: 10rpx 0;
}

.confirmimg {
  width: 195rpx;
  height: 267rpx;
}

.confirmtip {
  font-size: 36rpx;
  color: #12bcf8;
  text-align: center;
  margin: 22rpx auto;
}

.confirmtxt {
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/*按钮层*/

.btnv {
  text-align: center;
  display: flex;
  justify-content: center;
  margin: 33rpx auto 41rpx auto;
}

.cancelbtn {
  width: 220rpx;
  height: 88rpx;
  background: rgba(18, 188, 248, 1);
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.okbtn {
  width: 220rpx;
  height: 88rpx;
  background: rgba(18, 188, 248, 1);
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 36rpx;
  margin-left: 20rpx;
}
