/* pages/address/edit.wxss */

.geduanv {
  width: 100%;
  height: 20rpx;
  background-color: #e4edf7;
}

.hangv {
  display: flex;
  justify-content: space-between;
  margin: 80rpx 50rpx 0 42rpx;
}

.hangtitle {
  color: #000;
  font-size: 36rpx;
  margin-top: 24rpx;
}

.hanginputv {
  width: 484rpx;
  height: 80rpx;
  border: 1rpx solid #aaa;
  border-radius: 40rpx;
}

.txtcss {
  margin: 10rpx 20rpx;
  font-size: 32rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
}

.txttipcss {
  margin: 0rpx 0rpx;
  font-size: 32rpx;
  color: #999;
}

/*选择地址*/

.picker {
  margin: 10rpx 20rpx;
  font-size: 32rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.regiontxt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 80%;
}

.regionicon{
  color: #ccc;
  font-size: 40rpx;
  margin-right: 20rpx;
}

/*保存按钮*/
.savebtn {
  width: 60%;
  height: 94rpx;
  background: #12BCF8;
  border-radius: 47rpx;
  position: fixed;
  z-index: 999;
  bottom: 64rpx;
  left: 20%;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 94rpx;
}