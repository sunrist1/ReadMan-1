/* pages/address/index.wxss */

page {
  background-color: #e4edf7;
}

/*地址框*/

.addressv {
  width: 94%;
  height: 250rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0px 5rpx 16rpx 0px #4781f8;
  margin: 20rpx 3% 0 3%;
}

/*用户信息层*/

.userinfo {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 27rpx;
  font-size: 30rpx;
  color: #333;
}

/*地址行*/

.addresstxt {
  padding: 0rpx 27rpx;
  font-size: 30rpx;
  color: #333;
}

/*操作按钮部分*/

.addressoptv {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
  margin: 30rpx 0rpx;
}

.defaultv {
  display: flex;
  margin: 0rpx 27rpx;
}

.iconcss {
  margin-top: 32rpx;
  margin-right: 17rpx;
}

.defaulttxt {
  font-size: 26rpx;
  color: #333;
  margin-top: 32rpx;
}

/*操作按钮*/

.btnoptv {
  display: flex;
  width: 22%;
  justify-content: space-between;
  margin-right: 30rpx;
  margin-top: 30rpx;
  font-size: 26rpx;
}

.editv {
  color: #39f;
}

.delv {
  color: #f33;
}

/*新增地址*/
.addopt {
  width: 60%;
  height: 94rpx;
  background: #12BCF8;
  border-radius: 47rpx;
  position: fixed;
  z-index: 999;
  bottom: 64rpx;
  left: 20%;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 94rpx;
}
