page {
  background-color: #e4edf7;
}

.container {
  display: block;
}

.container .top_img {
  width: 100%;
}

.container .list {
  width: 100%;
  height: 808rpx;
  margin-top: 48rpx;
}

.container .list swiper {
  height: 100%;
  width: 100%;
}

.container .list swiper swiper-item .item {
  width: 702rpx;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  justify-content: left;
  align-items: center;
  position: relative;
}

.container .list swiper swiper-item .item .slide-image {
  background-color: #ffe933;
  width: 206rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
}

.container .list swiper swiper-item .item .slide-image image {
  height: 76%;
  margin: 20rpx auto;
  display: block;
}

.container .list swiper swiper-item .item .right_icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
}

.container .list swiper swiper-item .item .right {
  padding: 40rpx 16rpx;
}

.container .list swiper swiper-item .item .right title {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 26rpx;
}

.container .list swiper swiper-item .item .right .context {
  font-size: 24rpx;
  color: #999;
  display: block;
  width: 78%;
  white-space: wrap;
}

.box {
  height: 808rpx;
  width: 100%;
  z-index: 0;
  margin: -50rpx auto;
  text-align: center;
}

.box .club {
  height: 200rpx;
  width: 702rpx;
  position: relative;
  display: block;
  margin: 0 auto;
}

.box .club:nth-of-type(1) .slide-image {
  background-color: #8957a1;
}

.box .club:nth-of-type(2) .slide-image {
  background-color: #12bcf8;
}

.box .club:nth-of-type(3) .slide-image {
  background-color: #ffe933;
}

.box .club:nth-of-type(4) .slide-image {
  background-color: #ff4747;
}

.box .club:nth-of-type(5) .slide-image {
  background-color: #b3d465;
}

.box .club:nth-of-type(6) .slide-image {
  background-color: #8957a1;
}

.box .club:nth-of-type(7) .slide-image {
  background-color: #12bcf8;
}

.box .club:nth-of-type(8) .slide-image {
  background-color: #ffe933;
}

.box .club:nth-of-type(9) .slide-image {
  background-color: #ff4747;
}

.box .club:nth-of-type(5) .slide-image {
  background-color: #b3d465;
}

.box .club .item {
  width: 702rpx;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  justify-content: left;
  align-items: center;
  position: relative;
}

.box .club .item .slide-image {
  width: 206rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
}

.box .club .item .slide-image image {
  height: 76%;
  margin: 20rpx auto;
  display: block;
}

.box .club .item .right_icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
}

.box .club .item .right {
  padding: 40rpx 16rpx;
  box-sizing: border-box;
  width: 496rpx;
}

.box .club .item .right .title {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 26rpx;
  text-align: left;
}

.box .club .item .right .context {
  font-size: 24rpx;
  color: #999;
  display: block;
  width: 78%;
  white-space: normal;
  text-align: left;
}

.box .club:nth-child(1) {
  transform: scale(0.85, 0.85) translateY(120rpx);
  opacity: 0.6;
  z-index: 10;
}

.box .club:nth-child(2) {
  transform: scale(0.9, 0.9) translateY(60rpx);
  opacity: 0.9;
